# ============================================
# FLOWRITE BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5001
API_VERSION=v1

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://flowrite-admin:okJlajRjX1TxXwzp@cluster0.ohojm44.mongodb.net/?appName=Cluster0

# Local MongoDB (for development)
# MONGODB_URI=mongodb://localhost:27017/flowrite

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=WBUYtqXQj3YaqEo35PcOvf9Ch9klH7XyAnfCQ56AExmBwgSRWkRSOU7Zjwwmv8u4
6aIY2hBMu+faE+dXvYz1CQ==
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins (comma-separated for multiple)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ============================================
# RATE LIMITING
# ============================================
# Time window in minutes
RATE_LIMIT_WINDOW=15
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# For future email features
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@flowrite.com
FROM_NAME=Flowrite

# ============================================
# FILE UPLOAD (Optional)
# ============================================
MAX_FILE_SIZE=5242880
# 5MB in bytes

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ============================================
# PAGINATION
# ============================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================
# SECURITY
# ============================================
# Bcrypt rounds (10-12 recommended)
BCRYPT_ROUNDS=10

# ============================================
# PRODUCTION SETTINGS
# ============================================
# For production deployment:
# 1. Set NODE_ENV=production
# 2. Use strong JWT_SECRET (at least 64 characters)
# 3. Update CORS_ORIGIN with your production frontend URL
# 4. Use MongoDB Atlas production cluster
# 5. Enable HTTPS
